#!/bin/sh

CXXFLAGS="-fuse-ld=lld" CXX=g++ cmake -S benchmark buildgcc/benchmark -DCMAKE_BUILD_TYPE=Release
CXXFLAGS="-fuse-ld=lld" CXX=clang++ cmake -S benchmark buildclang/benchmark -DCMAKE_BUILD_TYPE=Release
if ! test -z "$icpx"
then
    CXXFLAGS="" CXX=icpx cmake -S benchmark buildintel/benchmark -DCMAKE_BUILD_TYPE=Release
fi
